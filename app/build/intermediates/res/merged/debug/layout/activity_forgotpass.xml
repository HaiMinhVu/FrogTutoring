<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haivu.frogtutoring.forgotpass"
    android:background="#81d7f2">


    <EditText
        android:id="@+id/edtfgemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="171dp"
        android:textColor="#05078c"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtfgphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtfgemail"
        android:layout_alignStart="@+id/edtfgemail"
        android:layout_below="@+id/edtfgemail"
        android:textColor="#05078c"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Phone" />

    <Button
        android:id="@+id/fgok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtfgphone"
        android:layout_alignRight="@+id/edtfgphone"
        android:layout_below="@+id/edtfgphone"
        android:layout_marginTop="59dp"
        android:textColor="#05078c"
        android:text="OK" />

    <Button
        android:id="@+id/fgcancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtfgphone"
        android:layout_alignStart="@+id/edtfgphone"
        android:layout_alignTop="@+id/fgok"
        android:textColor="#05078c"
        android:text="Cancel" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#ff00"
        android:text="Retrieve Password"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp" />

</RelativeLayout>
