<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haivu.frogtutoring.profile"
    android:padding="10dp"
    android:background="#81d7f2">


    <Button
        android:foregroundGravity="center"
        android:id="@+id/btnSearch"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="S"
        android:textSize="60dp"
        android:textColor="#05078c"
        android:layout_alignBaseline="@+id/btnAppointments"
        android:layout_alignBottom="@+id/btnAppointments"
        android:layout_alignLeft="@+id/tvdisplayphone"
        android:layout_alignStart="@+id/tvdisplayphone"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnAppointments"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="A"
        android:textSize="60dp"
        android:textColor="#05078c"
        android:layout_above="@+id/btnReviews"
        android:layout_toRightOf="@+id/btnSearch"
        android:layout_toEndOf="@+id/btnSearch" />

    <Button
        android:id="@+id/btnPayments"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="P"
        android:textSize="60dp"
        android:textColor="#05078c"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnSearch"
        android:layout_alignStart="@+id/btnSearch"
        android:layout_marginBottom="88dp" />

    <Button
        android:id="@+id/btnReviews"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="R"
        android:textSize="60dp"
        android:textColor="#05078c"
        android:layout_alignBottom="@+id/btnPayments"
        android:layout_toRightOf="@+id/btnSearch"
        android:layout_toEndOf="@+id/btnSearch"
        android:layout_alignTop="@+id/btnPayments" />

    <TextView
        android:id="@+id/tvsignout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="#05078c"
        android:textSize="15dp"
        android:text="Sign Out" />
    <TextView
        android:gravity="center"
        android:includeFontPadding="false"
        android:id="@+id/tvstname"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="40dp"
        android:layout_below="@+id/tvsignout"
        android:textColor="#05078c"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvemail"
        android:paddingTop="10dp"
        android:layout_width="50dp"
        android:textColor="#05078c"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvstname" />

    <TextView
        android:id="@+id/tvphone"
        android:paddingTop="10dp"
        android:textSize="15dp"
        android:textColor="#05078c"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvemail" />

    <TextView
        android:id="@+id/tvdisplayemail"
        android:layout_width="wrap_content"
        android:textColor="#05078c"
        android:layout_height="wrap_content"
        android:text="email"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/tvemail"
        android:layout_alignBottom="@+id/tvemail"
        android:layout_toRightOf="@+id/tvemail"
        android:layout_toEndOf="@+id/tvemail"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/tvdisplayphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#05078c"
        android:text="phone"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/tvphone"
        android:layout_alignBottom="@+id/tvphone"
        android:layout_alignLeft="@+id/tvdisplayemail"
        android:layout_alignStart="@+id/tvdisplayemail" />


</RelativeLayout>
