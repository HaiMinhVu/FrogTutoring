<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvtuname"
        android:text="name"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvtusubject"
        android:layout_below="@+id/tvtuname"
        android:text="subject"
        android:textSize="20sp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvturate"
        android:text="rate"
        android:textSize="20sp"
        android:layout_toLeftOf="@+id/btappt" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/tvturate"
        android:text="Rate "
        android:textSize="20sp"/>

    <Button
        android:text="view"
        android:textSize="12sp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/btreview"
        android:layout_below="@+id/btappt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:paddingTop="10dp"
        android:padding="10dp"
        android:text="Appt"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/btappt"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>